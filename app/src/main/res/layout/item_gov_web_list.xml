<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:background="@color/categories_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/logoGoV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="4.0dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#F6EED1"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/GovName_txt"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_logo_GOV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/health" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/GovName_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyidaungsu_book_bold"
        android:minLines="3"
        android:text="ကျန်းမာရေးနှင့် အားကစား ဝန်ကြီးဌာန"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/lawstitle_forntsize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logoGoV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>