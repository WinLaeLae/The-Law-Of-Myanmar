<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_margin_LR"
    android:layout_marginTop="@dimen/list_margin_TB"
    android:layout_marginRight="@dimen/list_margin_LR"
    app:cardBackgroundColor="@color/item_bg"
    app:cardCornerRadius="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/lawsTitle_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minLines="2"
            android:fontFamily="@font/pyidaungsu_book_bold"
            android:text=" ပြည်သူ့ကြွေးမြီစီမံခန့်ခွဲမှု ဥပဒေ"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toTopOf="@id/linearOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lawsTitle_txt"
            android:weightSum="3">

            <TextView
                android:id="@+id/lawNo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minLines="2"
                android:fontFamily="@font/pyidaungsu_book_regular"
                android:layout_marginLeft="15dp"
                android:text="ပြည်ထောင်စုလွှတ်တော်ဥပဒေအမှတ် ၂။"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_forntsize" />

            <TextView
                android:id="@+id/relateDate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="15dp"
                android:fontFamily="@font/pyidaungsu_book_regular"
                android:layout_marginRight="15dp"
                android:text="၀၅.၀၁.၂၀၁၆"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_forntsize" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>